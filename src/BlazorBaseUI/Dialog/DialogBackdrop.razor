@using Microsoft.AspNetCore.Components.Web
@implements IReferencableComponent

<RenderElement TState="DialogBackdropState"
               Tag="div"
               Enabled="shouldRender"
               State="state"
               Render="Render"
               ClassValue="ClassValue"
               StyleValue="computedStyleValue"
               ComponentAttributes="componentAttributes"
               ChildContent="ChildContent"
               @attributes="AdditionalAttributes"
               @ref="renderElementReference" />

@code {
    private const string ForcedStyle = "user-select: none; -webkit-user-select: none;";

    private bool shouldRender;
    private DialogBackdropState state;
    private RenderElement<DialogBackdropState>? renderElementReference;
    private Dictionary<string, object> componentAttributes = new();
    private Func<DialogBackdropState, string>? computedStyleValue;

    [CascadingParameter]
    private DialogRootContext? Context { get; set; }

    [CascadingParameter]
    private DialogPortalContext? PortalContext { get; set; }

    [Parameter]
    public RenderFragment<RenderProps<DialogBackdropState>>? Render { get; set; }

    [Parameter]
    public Func<DialogBackdropState, string>? ClassValue { get; set; }

    [Parameter]
    public Func<DialogBackdropState, string>? StyleValue { get; set; }

    [Parameter]
    public bool ForceRender { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }

    public ElementReference? Element => renderElementReference?.Element;

    protected override void OnInitialized()
    {
        if (Context is null)
        {
            throw new InvalidOperationException("DialogBackdrop must be used within a DialogRoot.");
        }

        state = new DialogBackdropState(Context.Open, Context.TransitionStatus);
        UpdateShouldRender();
        UpdateComputedStyleValue();
        BuildComponentAttributes();
    }

    protected override void OnParametersSet()
    {
        if (Context is not null)
        {
            state = new DialogBackdropState(Context.Open, Context.TransitionStatus);
        }

        UpdateShouldRender();
        UpdateComputedStyleValue();
        BuildComponentAttributes();
    }

    private void UpdateShouldRender()
    {
        if (Context is null)
        {
            shouldRender = false;
            return;
        }

        if (Context.Modal == ModalMode.False)
        {
            shouldRender = false;
            return;
        }

        if (Context.Nested && !ForceRender)
        {
            shouldRender = false;
            return;
        }

        var keepMounted = PortalContext?.KeepMounted ?? false;
        shouldRender = keepMounted || Context.Mounted;
    }

    private void UpdateComputedStyleValue()
    {
        computedStyleValue = s =>
        {
            var userStyle = StyleValue?.Invoke(s);
            return string.IsNullOrEmpty(userStyle) ? ForcedStyle : $"{ForcedStyle} {userStyle}";
        };
    }

    private void BuildComponentAttributes()
    {
        if (Context is null)
        {
            return;
        }

        var attrs = new Dictionary<string, object>();

        attrs["role"] = "presentation";

        var keepMounted = PortalContext?.KeepMounted ?? false;
        var isHidden = keepMounted && !Context.Open && (Context.TransitionStatus == TransitionStatus.Undefined || Context.TransitionStatus == TransitionStatus.Idle);

        if (isHidden)
        {
            attrs["hidden"] = true;
        }

        if (Context.Open)
        {
            attrs["data-open"] = string.Empty;
        }
        else
        {
            attrs["data-closed"] = string.Empty;
        }

        if (Context.TransitionStatus == TransitionStatus.Starting)
        {
            attrs["data-starting-style"] = string.Empty;
        }
        else if (Context.TransitionStatus == TransitionStatus.Ending)
        {
            attrs["data-ending-style"] = string.Empty;
        }

        attrs["onclick"] = EventCallback.Factory.Create<MouseEventArgs>(this, HandleClickAsync);

        componentAttributes = attrs;
    }

    private async Task HandleClickAsync(MouseEventArgs e)
    {
        if (Context is not null && Context.DismissOnOutsidePress)
        {
            await Context.SetOpenAsync(false, OpenChangeReason.OutsidePress);
        }

        await EventUtilities.InvokeOnClickAsync(AdditionalAttributes, e);
    }
}
