@using Microsoft.AspNetCore.Components.Web

<RenderElement TState="NavigationMenuPopupState"
               Tag="nav"
               State="state"
               Enabled="RootContext is not null"
               Render="Render"
               ClassValue="ClassValue"
               StyleValue="StyleValue"
               ComponentAttributes="componentAttributes"
               ChildContent="ChildContent"
               @attributes="AdditionalAttributes"
               @ref="renderElementReference" />

@code {
    private NavigationMenuPopupState state;
    private RenderElement<NavigationMenuPopupState>? renderElementReference;
    private Dictionary<string, object> componentAttributes = new();

    [CascadingParameter]
    private NavigationMenuRootContext? RootContext { get; set; }

    [CascadingParameter]
    private NavigationMenuPositionerContext? PositionerContext { get; set; }

    /// <summary>
    /// Allows you to replace the component's HTML element
    /// with a different tag, or compose it with another component.
    /// </summary>
    [Parameter]
    public RenderFragment<RenderProps<NavigationMenuPopupState>>? Render { get; set; }

    /// <summary>
    /// Gets or sets the CSS class function based on the component state.
    /// </summary>
    [Parameter]
    public Func<NavigationMenuPopupState, string?>? ClassValue { get; set; }

    /// <summary>
    /// Gets or sets the inline style function based on the component state.
    /// </summary>
    [Parameter]
    public Func<NavigationMenuPopupState, string?>? StyleValue { get; set; }

    /// <summary>
    /// Defines the child components of this instance.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Gets or sets a collection of additional attributes that will be applied to the created element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }

    /// <summary>
    /// Gets or sets the associated <see cref="ElementReference"/>.
    /// </summary>
    public ElementReference? Element => renderElementReference?.Element;

    /// <inheritdoc />
    protected override void OnParametersSet()
    {
        var open = RootContext?.GetValue() is not null;
        var side = PositionerContext?.Side ?? Side.Bottom;
        var align = PositionerContext?.Align ?? Align.Center;
        var anchorHidden = PositionerContext?.AnchorHidden ?? false;
        var transitionStatus = RootContext?.TransitionStatus ?? TransitionStatus.None;

        state = new NavigationMenuPopupState(open, side, align, anchorHidden, transitionStatus);
        BuildComponentAttributes();
    }

    /// <inheritdoc />
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            RootContext?.SetPopupElement(Element);
        }
    }

    private void BuildComponentAttributes()
    {
        var attrs = new Dictionary<string, object>();

        attrs["id"] = RootContext?.PopupId ?? string.Empty;
        attrs["tabindex"] = "-1";

        // Side-dependent positioning for origin-side alignment (top or left)
        var isOriginSide = state.Side == Side.Top || state.Side == Side.InlineStart;
        var isPhysicalLeft = state.Side == Side.Left || state.Side == Side.InlineStart;

        if (isOriginSide)
        {
            var verticalProp = state.Side == Side.Top ? "bottom" : "top";
            var horizontalProp = isPhysicalLeft ? "right" : "left";
            attrs["style"] = $"position: absolute; {verticalProp}: 0; {horizontalProp}: 0";
        }

        attrs["data-side"] = state.Side.ToDataAttributeString()!;
        attrs["data-align"] = state.Align.ToDataAttributeString()!;

        if (state.Open)
        {
            attrs["data-open"] = true;
        }
        else
        {
            attrs["data-closed"] = true;
        }

        if (state.AnchorHidden)
        {
            attrs["data-anchor-hidden"] = true;
        }

        if (state.TransitionStatus == TransitionStatus.Starting)
        {
            attrs["data-starting-style"] = true;
        }
        else if (state.TransitionStatus == TransitionStatus.Ending)
        {
            attrs["data-ending-style"] = true;
        }

        componentAttributes = attrs;
    }
}
