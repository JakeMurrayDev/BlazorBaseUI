@page "/accordion"
@rendermode InteractiveServer

<ComponentShowcase ComponentName="Accordion"
                   Description="A vertically stacked set of interactive headings that each reveal a section of content."
                   BaseRoute="/accordion"
                   IsWasmMode="false">

    <DemoSection Title="Basic Usage"
                 Description="A simple accordion with three sections"
                 CodeSnippet="@CodeSnippet">

        <!-- Your actual Accordion component demo here -->
        <div class="w-full max-w-2xl">
            <div class="divide-y divide-gray-200 rounded-lg border border-gray-200">
                <details class="group">
                    <summary class="cursor-pointer px-6 py-4 font-medium text-gray-900 hover:bg-gray-50">
                        Is it accessible?
                    </summary>
                    <div class="px-6 pb-4 text-gray-600">
                        Yes. It adheres to the WAI-ARIA design pattern.
                    </div>
                </details>
                <details class="group">
                    <summary class="cursor-pointer px-6 py-4 font-medium text-gray-900 hover:bg-gray-50">
                        Is it styled?
                    </summary>
                    <div class="px-6 pb-4 text-gray-600">
                        Yes. It comes with default styles that matches the other components aesthetic.
                    </div>
                </details>
                <details class="group">
                    <summary class="cursor-pointer px-6 py-4 font-medium text-gray-900 hover:bg-gray-50">
                        Is it animated?
                    </summary>
                    <div class="px-6 pb-4 text-gray-600">
                        Yes. It's animated by default, but you can disable it if you prefer.
                    </div>
                </details>
            </div>
        </div>

    </DemoSection>

    <DemoSection Title="Multiple Sections Open"
                 Description="Allow multiple accordion items to be open simultaneously">

        <!-- Another example -->
        <div class="w-full max-w-2xl text-left">
            <p class="text-gray-600">Multiple items can be expanded at once in this configuration.</p>
        </div>

    </DemoSection>

</ComponentShowcase>

@code {
    private const string CodeSnippet = 
    """
    <Accordion>
      <AccordionItem Title="Section 1">
        Content here
      </AccordionItem>
    </Accordion>
    """;
}