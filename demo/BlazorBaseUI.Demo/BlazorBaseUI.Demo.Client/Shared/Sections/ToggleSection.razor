@using BlazorBaseUI.Toggle

<ComponentShowcase ComponentName="Toggle"
                   Description="A two-state button that can be on (pressed) or off."
                   BaseRoute="/toggle"
                   IsWasmMode="IsWasmMode">

    <DemoSection Title="Basic Toggle"
                 Description="Uncontrolled toggle using DefaultPressed. Click to toggle state.">
        <div class="flex items-center gap-4">
            <Toggle DefaultPressed="false"
                    ClassValue="@(state => ToggleClass(state))">
                <span class="px-3 py-2">Toggle</span>
            </Toggle>
            <span class="text-gray-700">Click to toggle</span>
        </div>
    </DemoSection>

    <DemoSection Title="Controlled Toggle"
                 Description="State controlled externally via Pressed parameter. Updates when changed from outside.">
        <div class="flex items-center gap-4">
            <Toggle Pressed="@controlledPressed"
                    PressedChanged="@(value => controlledPressed = value)"
                    ClassValue="@(state => ToggleClass(state))">
                <span class="px-3 py-2">@(controlledPressed ? "On" : "Off")</span>
            </Toggle>
            <span class="text-gray-700">Pressed: @(controlledPressed ? "true" : "false")</span>
            <button type="button"
                    class="rounded bg-indigo-600 px-3 py-1 text-sm text-white hover:bg-indigo-700"
                    @onclick="@(() => controlledPressed = !controlledPressed)">
                Toggle Externally
            </button>
        </div>
    </DemoSection>

    <DemoSection Title="Default Pressed"
                 Description="Toggle starts in pressed state using DefaultPressed.">
        <div class="flex items-center gap-4">
            <Toggle DefaultPressed="true"
                    ClassValue="@(state => ToggleClass(state))">
                <span class="px-3 py-2">Initially Pressed</span>
            </Toggle>
            <span class="text-gray-700">Starts in pressed state</span>
        </div>
    </DemoSection>

    <DemoSection Title="Disabled State"
                 Description="Uses disabled attribute and data-disabled. Click has no effect.">
        <div class="flex items-center gap-6">
            <div class="flex items-center gap-3">
                <Toggle Disabled="true"
                        DefaultPressed="false"
                        ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Disabled (off)</span>
                </Toggle>
            </div>
            <div class="flex items-center gap-3">
                <Toggle Disabled="true"
                        DefaultPressed="true"
                        ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Disabled (on)</span>
                </Toggle>
            </div>
        </div>
    </DemoSection>

    <DemoSection Title="OnPressedChange Callback"
                 Description="Event handler called when toggle state changes.">
        <div class="flex flex-col gap-4">
            <div class="flex items-center gap-4">
                <Toggle OnPressedChange="@HandlePressedChange"
                        ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Toggle</span>
                </Toggle>
                <span class="text-gray-700">Change count: @changeCount</span>
            </div>
        </div>
    </DemoSection>

    <DemoSection Title="Cancelable Change"
                 Description="OnPressedChange can cancel the state change by calling Cancel().">
        <div class="flex flex-col gap-4">
            <div class="flex items-center gap-4">
                <Toggle OnPressedChange="@HandleCancelableChange"
                        ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Cancelable</span>
                </Toggle>
                <label class="flex items-center gap-2">
                    <input type="checkbox" @bind="preventChange" class="rounded" />
                    <span class="text-sm text-gray-700">Cancel next change</span>
                </label>
            </div>
            <p class="text-sm text-gray-500">
                Check the box, then click the toggle - the change will be prevented.
            </p>
        </div>
    </DemoSection>

    <DemoSection Title="Data Attributes"
                 Description="Shows data-* style hooks based on component state.">
        <div class="flex flex-col gap-4">
            <div class="flex items-center gap-4">
                <Toggle DefaultPressed="true"
                        Disabled="@dataAttrDisabled"
                        ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Toggle to see changes</span>
                </Toggle>
            </div>
            <label class="flex items-center gap-2 text-sm">
                <input type="checkbox" @bind="dataAttrDisabled" class="rounded" />
                <span>Disabled</span>
            </label>
            <div class="rounded bg-gray-100 p-3 font-mono text-xs">
                <p>Expected attributes:</p>
                <ul class="mt-1 list-inside list-disc">
                    <li>data-pressed (when pressed)</li>
                    @if (dataAttrDisabled)
                    {
                        <li>data-disabled</li>
                    }
                    <li>aria-pressed="true/false"</li>
                </ul>
            </div>
        </div>
    </DemoSection>

    <DemoSection Title="Keyboard Interaction"
                 Description="Toggle can be activated with Enter or Space keys.">
        <div class="flex flex-col gap-4">
            <div class="flex items-center gap-4">
                <Toggle ClassValue="@(state => ToggleClass(state))">
                    <span class="px-3 py-2">Focus me and press Enter or Space</span>
                </Toggle>
            </div>
            <p class="text-sm text-gray-500">
                Tab to focus the toggle, then press Enter or Space to toggle.
            </p>
        </div>
    </DemoSection>

    <DemoSection Title="Custom Styling"
                 Description="Use ClassValue to apply dynamic styles based on state.">
        <div class="flex items-center gap-4">
            <Toggle DefaultPressed="false"
                    ClassValue="@(state => CustomToggleClass(state))">
                <span class="px-4 py-2">Custom Style</span>
            </Toggle>
            <Toggle DefaultPressed="true"
                    ClassValue="@(state => PillToggleClass(state))">
                <span class="px-4 py-2">Pill Style</span>
            </Toggle>
        </div>
    </DemoSection>

    <DemoSection Title="Icon Toggle"
                 Description="Toggle with icon content.">
        <div class="flex items-center gap-4">
            <Toggle DefaultPressed="false"
                    ClassValue="@(state => IconToggleClass(state))">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>
            </Toggle>
            <Toggle DefaultPressed="true"
                    ClassValue="@(state => IconToggleClass(state))">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
            </Toggle>
            <Toggle DefaultPressed="false"
                    ClassValue="@(state => IconToggleClass(state))">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0111.186 0z" />
                </svg>
            </Toggle>
        </div>
    </DemoSection>

</ComponentShowcase>

@code {
    [Parameter]
    public bool IsWasmMode { get; set; }

    private bool controlledPressed;
    private int changeCount;
    private bool preventChange;
    private bool dataAttrDisabled;

    private void HandlePressedChange(TogglePressedChangeEventArgs e)
    {
        changeCount++;
    }

    private void HandleCancelableChange(TogglePressedChangeEventArgs e)
    {
        if (preventChange)
        {
            e.Cancel();
            preventChange = false;
        }
    }

    private static string ToggleClass(ToggleState state)
    {
        var baseClass = "inline-flex items-center justify-center rounded-md border text-sm font-medium transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2";

        if (state.Disabled)
            return $"{baseClass} border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed";

        if (state.Pressed)
            return $"{baseClass} border-indigo-600 bg-indigo-600 text-white";

        return $"{baseClass} border-gray-300 bg-white text-gray-700 hover:bg-gray-50";
    }

    private static string CustomToggleClass(ToggleState state)
    {
        var baseClass = "inline-flex items-center justify-center rounded-lg border-2 text-sm font-semibold transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2";

        if (state.Disabled)
            return $"{baseClass} border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed";

        if (state.Pressed)
            return $"{baseClass} border-emerald-500 bg-emerald-500 text-white shadow-lg shadow-emerald-200";

        return $"{baseClass} border-emerald-300 bg-white text-emerald-700 hover:border-emerald-400";
    }

    private static string PillToggleClass(ToggleState state)
    {
        var baseClass = "inline-flex items-center justify-center rounded-full border text-sm font-medium transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-purple-500 focus-visible:ring-offset-2";

        if (state.Disabled)
            return $"{baseClass} border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed";

        if (state.Pressed)
            return $"{baseClass} border-purple-600 bg-purple-600 text-white";

        return $"{baseClass} border-purple-300 bg-white text-purple-700 hover:bg-purple-50";
    }

    private static string IconToggleClass(ToggleState state)
    {
        var baseClass = "inline-flex items-center justify-center rounded-md border p-2 transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2";

        if (state.Disabled)
            return $"{baseClass} border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed";

        if (state.Pressed)
            return $"{baseClass} border-indigo-600 bg-indigo-100 text-indigo-600";

        return $"{baseClass} border-gray-300 bg-white text-gray-700 hover:bg-gray-50";
    }
}
