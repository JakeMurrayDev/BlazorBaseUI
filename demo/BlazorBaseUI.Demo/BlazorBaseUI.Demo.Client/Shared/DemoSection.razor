<div class="space-y-4">
    <div>
        <h3 class="text-lg font-semibold text-gray-900">@Title</h3>
        @if (!string.IsNullOrEmpty(Description))
        {
            <p class="mt-1 text-sm text-gray-600">@Description</p>
        }
    </div>

    <!-- Preview Container -->
    <div class="rounded-xl border border-gray-200 bg-white p-8 shadow-sm">
        <div class="flex flex-wrap items-center justify-center gap-4">
            @ChildContent
        </div>
    </div>

    <!-- Optional Code Block -->
    @if (CodeSnippet != null)
    {
        <details class="group">
            <summary class="cursor-pointer rounded-lg bg-slate-900 px-4 py-3 text-sm font-medium text-slate-300 hover:bg-slate-800">
                <span class="group-open:hidden">Show Code</span>
                <span class="hidden group-open:inline">Hide Code</span>
            </summary>
            <div class="mt-2 overflow-x-auto rounded-lg bg-slate-900 p-4">
                <pre class="text-sm text-slate-300"><code>@CodeSnippet</code></pre>
            </div>
        </details>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? CodeSnippet { get; set; }
}